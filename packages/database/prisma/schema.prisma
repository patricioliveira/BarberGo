generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---

enum UserRole {
  USER
  ADMIN
  STAFF
  PARTNER
  SUPER_ADMIN
}

enum BookingStatus {
  CONFIRMED
  CANCELED
  COMPLETED
  WAITING_CANCELLATION
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  SUSPENDED
  CANCELED
}

enum PlanType {
  PRO
  PREMIUM
}

enum BillingType {
  PREPAID
  POSTPAID
}

// --- MODELS ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  UserPhone     Json?
  image         String?
  password      String?
  role          UserRole  @default(USER)

  staffProfile BarberStaff?

  accounts Account[]
  sessions Session[]
  bookings Booking[]

  commissionPercentage Decimal @default(0) @db.Decimal(5, 2)
  isActive             Boolean @default(true)

  // Relação: Barbearias que este usuário é DONO
  managedBarbershops Barbershop[] @relation("BarbershopOwner")
  referredBarbershops Barbershop[] @relation("PartnerReferral")

  // NOVOS CAMPOS PARA RELAÇÃO
  ratings   Rating[]
  favorites Favorite[]
  blockedUsers BarbershopBlock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id           String             @id @default(cuid())
  barbershopId String             @unique
  barbershop   Barbershop         @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  status       SubscriptionStatus @default(TRIAL)
  plan         PlanType           @default(PRO)
  price        Decimal            @default(0) @db.Decimal(10, 2)
  startDate    DateTime           @default(now())
  endDate      DateTime?
  trialDays    Int                @default(7)
  billingType  BillingType        @default(POSTPAID)
  invoices     Invoice[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model Invoice {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  amount         Decimal
  dueDate        DateTime
  paidAt         DateTime?
  method         String? // PIX, CARD, LINK
  reference      String? // Mês/Ano ou ID de transação externa
  status         String       @default("PENDING") // PENDING, PAID, CANCELED
  createdAt      DateTime     @default(now())
}

model Barbershop {
  id             String   @id @default(uuid())
  name           String
  slug           String   @unique
  address        String
  phones         Json?
  description    String
  imageUrl       String
  isExclusive    Boolean  @default(false)
  subscription   Subscription?
  cnpj           String?
  openingHours   Json?
  // NOVOS CAMPOS
  instagram      String?
  amenities      String[] // Ex: ["WIFI", "PARKING", "KIDS", "ACCESSIBILITY"]
  allowOvertime  Boolean  @default(false)

  isClosed       Boolean  @default(false)
  paymentMethods String[]
  views          Int      @default(0)
  ownerId        String?
  owner          User?    @relation("BarbershopOwner", fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services BarbershopService[]
  bookings Booking[]           @relation("BarbershopBookings")
  staff    BarberStaff[]

  // NOVOS CAMPOS PARA RELAÇÃO
  ratings   Rating[]
  favorites Favorite[]
  blockedUsers BarbershopBlock[]

  referredById String?
  referredBy   User?   @relation("PartnerReferral", fields: [referredById], references: [id])
}

model BarberStaff {
  servicePrices ServiceStaffPrice[]
  id           String     @id @default(cuid())
  name         String
  jobTitle     String     @default("Barbeiro")
  imageUrl     String?
  email        String?    @unique
  isActive     Boolean    @default(true)
  openingHours Json?
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  userId       String?    @unique
  user         User?      @relation(fields: [userId], references: [id])
  bookings     Booking[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model BarbershopBlock {
  id           String     @id @default(cuid())
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  reason       String?
  createdAt    DateTime   @default(now())

  @@unique([barbershopId, userId])
}

model BarbershopService {
  staffPrices ServiceStaffPrice[]
  id           String     @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  price        Decimal    @db.Decimal(10, 2)
  duration     Int        @default(45)
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  bookings     Booking[]
}

model Booking {
  id           String            @id @default(uuid())
  userId       String
  user         User              @relation(fields: [userId], references: [id])
  serviceId    String
  service      BarbershopService @relation(fields: [serviceId], references: [id])
  date         DateTime
  status       BookingStatus     @default(CONFIRMED)
  barbershopId String
  barbershop   Barbershop        @relation("BarbershopBookings", fields: [barbershopId], references: [id])
  staffId      String?
  staff        BarberStaff?      @relation(fields: [staffId], references: [id])

  // NOVO CAMPO PARA RELAÇÃO
  rating Rating?
  observation       String?
  silentAppointment Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rating {
  id           String     @id @default(cuid())
  stars        Int
  comment      String?
  showOnPage   Boolean    @default(false)
  bookingId    String     @unique
  booking      Booking    @relation(fields: [bookingId], references: [id])
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  createdAt    DateTime   @default(now())
}

model Favorite {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  createdAt    DateTime   @default(now())

  @@unique([userId, barbershopId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model ServiceStaffPrice {
  id        String            @id @default(cuid())
  serviceId String
  service   BarbershopService @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staffId   String
  staff     BarberStaff       @relation(fields: [staffId], references: [id], onDelete: Cascade)
  price     Decimal           @db.Decimal(10, 2)
  isLinked  Boolean           @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([serviceId, staffId])
}
